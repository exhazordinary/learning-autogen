# AutoGen Research Configuration

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///research.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://autogen:autogen_password@postgres:5432/autogen_research

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Model Configuration
MODEL_TYPE=ollama
MODEL_NAME=llama3.2
TEMPERATURE=0.7
MAX_ROUNDS=12

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434/v1

# OpenAI Configuration (if using OpenAI)
# MODEL_TYPE=openai
# OPENAI_API_KEY=your-openai-api-key
# MODEL_NAME=gpt-4

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_METRICS=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATELIMIT_ENABLED=true

# React Frontend Configuration
VITE_API_URL=http://localhost:5001

# PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=autogen_research
POSTGRES_USER=autogen
POSTGRES_PASSWORD=autogen_password

# ===== NEW IN V2 =====

# Authentication (JWT)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
CREATE_DEFAULT_USER=false
DEFAULT_USER=admin
DEFAULT_PASSWORD=changeme

# Observability - Sentry
SENTRY_DSN=
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Observability - OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Enhanced Features
ENABLE_TOOLS=true          # Enable web_search and calculator tools
USE_ENHANCED_TEAM=true     # Use EnhancedResearchTeam with advanced features
USE_DYNAMIC_ROUTING=true   # Dynamically select agents based on task
MAX_CONTEXT_TOKENS=4000    # Context window size for conversation management
